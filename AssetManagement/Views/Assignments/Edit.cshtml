@model AssetManagement.ViewModels.AssignmentVM

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Assignment</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.assignment.ID)
        @Html.HiddenFor(model => model.assignment.EmployeeID)

        <div class="form-group">
            <label class="control-label col-md-2">Name:</label>
            <div class="col-md-10">
                @Html.DisplayFor(model => model.assignment.Employee.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.DisplayFor(model => model.assignment.Employee.LastName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.assignment.Employee.FirstName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Computer Name:</label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.assignment.HardwareID, (IEnumerable<SelectListItem>)Model.computerList, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.assignment.HardwareID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">MS Office:</label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.assignment.SoftwareID, (IEnumerable<SelectListItem>)Model.msofficeList, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.assignment.SoftwareID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">MS Visio:</label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.assignment.VisioID, (IEnumerable<SelectListItem>)Model.msvisioLst, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.assignment.VisioID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.assignment.StatusID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.assignment.StatusID, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.assignment.StatusID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.assignment.Comment, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.assignment.Comment, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.assignment.Comment, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
